<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Estilo dos Etext Inputs Email e Senha-->
    <style name="MY_InputETextStyle" parent="Widget.AppCompat.EditText">

        <item name="android:layout_width">@dimen/ti_width</item>
        <item name="android:layout_height">@dimen/ti_height</item>
        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="android:background">@drawable/etext_rounded</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#FF000000</item>
        <item name="android:textColor">#FF000000</item>

    </style>

<!--Estilo do Dialog Recuperação de Senha-->
    <style name="MY_DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#00FF0000</item>
        <item name="android:windowBackground">#00FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>

</resources>